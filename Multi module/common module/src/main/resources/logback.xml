<configuration>
    <appender name="main-log" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- {Date} {Thread-Name} {Log level}-->
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="main-log" />
    </root>

    <root level="error">
        <appender-ref ref="main-log" />
    </root>
</configuration>